  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in library 'brainease_lexer'",
      "cargo": {
        "args": ["test", "--no-run", "--lib", "--package=brainease_lexer"],
        "filter": {
          "name": "brainease_lexer",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in library 'brainease_runtime'",
      "cargo": {
        "args": ["test", "--no-run", "--lib", "--package=brainease_runtime"],
        "filter": {
          "name": "brainease_runtime",
          "kind": "lib"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'brainease'",
      "cargo": {
        "args": ["build", "--bin=brainease", "--package=brainease"],
        "filter": {
          "name": "brainease",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'brainease'",
      "cargo": {
        "args": [
          "test",
          "--no-run",
          "--bin=brainease",
          "--package=brainease",
          "--test=integration_tests"
        ],
        "filter": {
          "name": "integration_tests",
          "kind": "test"
        }
      },
      "cwd": "${workspaceFolder}"
    }
  ]
}
